<Page
    x:Class="Nazuna.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Nazuna"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="16" HorizontalAlignment="Stretch" VerticalAlignment="Center" MaxWidth="400">
            <Border CornerRadius="4" Background="{ThemeResource ControlFillColorDefaultBrush}">                
                <StackPanel Margin="32" Spacing="16">
                    <TextBox x:Name="UsernameTextBox" x:Uid="UsernameTextBox" KeyDown="Login" TextChanged="OnInputChanged" />
                    <PasswordBox x:Name="PasswordTextBox" x:Uid="PasswordBox" KeyDown="Login" PasswordChanged="OnInputChanged" />
                    <Button Margin="0, 16, 0, 0" IsEnabled="False" x:Name="LoginButton" HorizontalAlignment="Stretch" Style="{ThemeResource AccentButtonStyle}" Click="Login">
                        <TextBlock Text="Login" x:Uid="LoginButton" />
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>